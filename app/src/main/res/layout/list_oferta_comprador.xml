<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >


    <LinearLayout
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:padding="5dp"
                android:layout_marginRight="15dp"
                android:background="@color/redDefault"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/id_pedido"
                    android:textSize="16dp"
                    android:text="21"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tipo_produto_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produto Usado"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Quantidade: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/quantidade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="PreÃ§o Pago: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/preco_pago"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="10.66"
                    android:textColor="@color/gray" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tipo entrega: "
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tipo_entrega"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Entregar"
                    android:textSize="12sp"
                    android:textColor="@color/redDefault" />

            </LinearLayout>

            <TextView
                android:id="@+id/endereco"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Estrada santa monica 600 - Suzano - SP"
                android:textColor="@color/gray" />

        </LinearLayout>





    </LinearLayout>


</LinearLayout>