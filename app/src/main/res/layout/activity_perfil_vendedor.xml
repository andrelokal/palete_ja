<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/redDefault"
        app:navigationIcon="?attr/homeAsUpIndicator" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                    <LinearLayout
                        android:background="@color/redDefault"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal|bottom"
                        android:layout_height="180dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/user"
                            android:padding="5dp"
                            android:layout_marginBottom="5dp"
                            app:civ_border_width="4dp"
                            app:civ_border_color="#29000000"/>

                        <TextView
                            android:id="@+id/nome"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="25dp"
                            android:text="nome usuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Telefone fixo"
                                    style="@style/redlabel" />

                                <EditText
                                    android:id="@+id/telefone"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:textSize="14dp"
                                    android:hint="Telefone fixo"
                                    android:padding="5dp"
                                    android:background="@drawable/input_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Celular"
                                    style="@style/redlabel" />

                                <EditText
                                    android:id="@+id/celular"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:textSize="14dp"
                                    android:hint="Celular"
                                    android:padding="5dp"
                                    android:background="@drawable/input_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Whatsapp"
                                    style="@style/redlabel" />

                                <Switch
                                    android:id="@+id/whatsapp"
                                    android:gravity="left"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Endereço"
                            style="@style/redlabel" />

                        <EditText
                            android:id="@+id/endereco"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:hint="Endereço"
                            android:background="@drawable/input_text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tipo de produto"
                                    style="@style/redlabel" />

                                <TextView
                                    android:id="@+id/tipo_produto"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Tipo produto"
                                    android:background="@drawable/input_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tipo entrega"
                                    style="@style/redlabel" />

                                <TextView
                                    android:id="@+id/tipo_entrega"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Tipo entrega"
                                    android:background="@drawable/input_text"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Raio Entrega"
                                    style="@style/redlabel" />

                                <EditText
                                    android:id="@+id/raio_entrega"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:textSize="14dp"
                                    android:hint="10"
                                    android:padding="5dp"
                                    android:inputType="numberDecimal"
                                    android:digits="1234567890."
                                    android:background="@drawable/input_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quantidade minima entrega"
                                    style="@style/redlabel" />

                                <EditText
                                    android:id="@+id/qtda_minimo"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:hint="100"
                                    android:inputType="numberDecimal"
                                    android:digits="1234567890."
                                    android:background="@drawable/input_text"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Site"
                            style="@style/redlabel" />

                        <EditText
                            android:id="@+id/site"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:hint="Site"
                            android:background="@drawable/input_text"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/default_button"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Salvar"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
</LinearLayout>